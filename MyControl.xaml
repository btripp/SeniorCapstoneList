             Background="{DynamicResource {x:Static vsfx:VsBrushes.ToolWindowBackgroundKey}}"
             Loaded="MyToolWindow_Loaded" 
             d:DesignHeight="287" 
             d:DesignWidth="807" MinHeight="150" MinWidth="600">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ToolBar Grid.Row="0" Grid.Column="0" Name="toolBar1" FontSize="9">
            <Button Name="button1" ToolTip="Check In Files" Click="checkin_Click">Checkin</Button>
            <Separator/>
            <Button Name="button3" ToolTip="Ignore Selected File" Click="ignore_Click">Ignore</Button>
            <Button Name="shelve" ToolTip="Open Shelve Window"  Click="shelve_Click">Shelve</Button>
            <Button Name="unshelve" ToolTip="Open UnShelve Window" Click="unshelve_Click">UnShelve</Button>
            <Separator/>
            <Button ToolTip="Hide/Show Comments" Name="hideShowComment" Click="hideShowComment_Click">
                <Image Width="16" Height="12">
                    <Image.Source>
                        <CroppedBitmap Source="/SeniorCapstoneIgnoreList;component/images/Comment.png" SourceRect="8,10,16,12"/>
                    </Image.Source>
                </Image>
            </Button>
            <Button Name="folderView">f</Button>
            <Button Name="lView">l</Button>
            <Separator/>
            <Button Name="compare">c</Button>
            <Button Name="viewFile">v</Button>
            <Button Name="undo">
                <Image Width="13" Height="13">
                    <Image.Source>
                        <CroppedBitmap Source="/SeniorCapstoneIgnoreList;component/images/Undo_Redo.png" SourceRect="87,6,13,13"/>
                    </Image.Source>
                </Image>
            </Button>
            <Separator/>
            <Button Name="refresh">
                <Image Width="13" Height="15">
                    <Image.Source>
                        <CroppedBitmap Source="/SeniorCapstoneIgnoreList;component/images/Refresh.png" SourceRect="11,7,13,15"/>
                    </Image.Source>
                </Image>
            </Button>
            <Separator/>
            <Button Name="filterBySolution">f</Button>
            <Separator/>
            <Label FontSize="9">Workspace:</Label>
            <ComboBox Name="workSpaces" ToolTip="Current Workspace" SelectionChanged="changeWorkspace">
            </ComboBox>         
            <Button Name="hideShowIgnoreList" ToolTip="Hide/Show Ignore List" Click="hideShowIgnoreList_Click" >
                <Image Source="Resources/hideShowIgnoreList.png"/>
            </Button>
        </ToolBar>
        <Label Grid.Column="0" Grid.Row="1" Content="Comment:" Name="commentLabel" FontSize="9"  BorderThickness="1" VerticalContentAlignment="Bottom" />
        <TextBox Grid.Row="2" Grid.Column="0" Height="56" Name="commentBox" ToolTip="Enter comment for check in" FontSize="9" Margin="4,4,4,4"/>
