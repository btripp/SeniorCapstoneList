<Window x:Class="AugustaStateUniversity.SeniorCapstoneIgnoreList.ShelveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShelveWindow" Height="350" Width="500">
    <Grid>
        <StackPanel Height="255" HorizontalAlignment="Left" Margin="12,12,0,0" Name="stackPanel1" VerticalAlignment="Top" Width="454">
            <StackPanel Height="Auto" Name="stackPanel2" Width="Auto" >
                <Label Content="Shelveset Name: " Height="Auto" Width="Auto"/>
                <TextBox Height="Auto" Width="Auto" Name="shelvesetName"/>
            </StackPanel>
            <Label Content="Comment:" Height="28" Name="label1" />
            <TextBox Height="23" Name="textBox1" Width="Auto"/>
            <ListView Height="200" Name="listView1" Width="Auto">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="140" Header="Name" DisplayMemberBinding="{Binding fileName}"  />
                        <GridViewColumn Width="100" Header="Change" DisplayMemberBinding="{Binding changeType}" />
                        <GridViewColumn Width="214" Header="Folder" DisplayMemberBinding="{Binding folder}" />
                    </GridView>
                    
                </ListView.View>
            </ListView>
        </StackPanel>
        <Button Content="Shelve" Height="23" HorizontalAlignment="Left" Margin="295,276,0,0" Name="shelve" VerticalAlignment="Top" Width="75" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="391,276,0,0" Name="cancelShelve" VerticalAlignment="Top" Width="75" Click="cancelShelve_Click" />
    </Grid>
</Window>
